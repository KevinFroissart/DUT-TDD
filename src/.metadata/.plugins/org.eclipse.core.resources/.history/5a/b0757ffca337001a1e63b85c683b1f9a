package fr.univlille.iutinfo;

public class BowlingGame {

	private int score;
	private String coups;
	private double nbLance;
	private int reserve;
	private int oldShot;

	public BowlingGame() {
		score = 0;
		coups = "";
		reserve = 1;
	}

	public void roll (int pins) {
		if(reserve > 1) {
			score += pins * 2;
			oldShot += pins;
			reserve --;
		} else {
			score += pins;
			oldShot += pins;
		}
		nbLance += 0.5;		
	}

	public void strike () {
		score += 10;
		nbLance += 0.5;
		reserve = 3;
		oldShot = 0;
	}

	public void spare () {
		if(reserve > 1) {
			score += (10 - oldShot) * 2;
			reserve --;
		} else {
			score += 10 - oldShot;
		}
		nbLance += 0.5;		
		reserve = 2;
		oldShot = 0;
	}

	public int score () {
		return score;
	}

	public String toString () {
		return coups;
	}
}